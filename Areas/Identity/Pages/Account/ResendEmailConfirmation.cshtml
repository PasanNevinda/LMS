@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Resend Confirmation";
}

<div class="auth-single">
    <h1><i class="bi bi-envelope-check"></i> Resend Confirmation</h1>
    <h2>Enter your email to resend confirmation</h2>

    <form method="post" class="auth-form">
        <div asp-validation-summary="All" class="text-danger validation-summary-errors" role="alert"></div>

        <div class="form-floating mb-3">
            <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="name@example.com" />
            <label asp-for="Input.Email" class="form-label">Email Address</label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-lg btn-primary">
            <i class="bi bi-send"></i> Resend Confirmation
        </button>

        <div class="auth-links text-center">
            <p>
                <a asp-page="./Login">
                    <i class="bi bi-arrow-left"></i> Back to Login
                </a>
            </p>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}