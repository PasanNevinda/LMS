@inject SignInManager<ApplicationUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}

<div class="profile-info-card mb-3">
    <div class="text-center">
        <div class="profile-avatar" style="width: 80px; height: 80px; font-size: 32px;">
            @User.Identity.Name?.Substring(0, 1).ToUpper()
        </div>
        <h5 class="mt-3 mb-1">@User.Identity.Name</h5>
        @if (User.IsInRole("Teacher"))
        {
            <span class="badge bg-primary">Teacher</span>
        }
        else if (User.IsInRole("Student"))
        {
            <span class="badge bg-success">Student</span>
        }
        else if (User.IsInRole("Admin"))
        {
            <span class="badge bg-success">Admin</span>
        }
    </div>
</div>

<ul class="nav nav-pills flex-column">
    <li class="nav-item">
        <a class="nav-link @ManageNavPages.IndexNavClass(ViewContext)"
           id="profile"
           asp-page="./Index">
            <i class="bi bi-person-circle"></i>
            <span>Profile</span>
        </a>
    </li>

    <li class="nav-item">
        <a class="nav-link @ManageNavPages.EmailNavClass(ViewContext)"
           id="email"
           asp-page="./Email">
            <i class="bi bi-envelope"></i>
            <span>Email</span>
        </a>
    </li>

    <li class="nav-item">
        <a class="nav-link @ManageNavPages.ChangePasswordNavClass(ViewContext)"
           id="change-password"
           asp-page="./ChangePassword">
            <i class="bi bi-lock"></i>
            <span>Password</span>
        </a>
    </li>

    @if (User.IsInRole("Teacher") || User.IsInRole("Admin"))
    {
        <li class="nav-item">
            <a class="nav-link @(ViewContext.RouteData.Values["page"]?.ToString().Contains("TeacherProfile") == true ? "active" : "")"
               asp-page="./TeacherProfile">
                <i class="bi bi-credit-card"></i>
                <span>Bank Details</span>
            </a>
        </li>
    }

    @if (hasExternalLogins)
    {
        <li id="external-logins" class="nav-item">
            <a id="external-login"
               class="nav-link @ManageNavPages.ExternalLoginsNavClass(ViewContext)"
               asp-page="./ExternalLogins">
                <i class="bi bi-link-45deg"></i>
                <span>External logins</span>
            </a>
        </li>
    }

    <li class="nav-item">
        <a class="nav-link @ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext)"
           id="two-factor"
           asp-page="./TwoFactorAuthentication">
            <i class="bi bi-shield-check"></i>
            <span>Two-factor auth</span>
        </a>
    </li>

    <li class="nav-item">
        <a class="nav-link @ManageNavPages.PersonalDataNavClass(ViewContext)"
           id="personal-data"
           asp-page="./PersonalData">
            <i class="bi bi-file-text"></i>
            <span>Personal data</span>
        </a>
    </li>
</ul>