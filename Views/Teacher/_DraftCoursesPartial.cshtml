@model List<LMS.ViewModels.Dashboard.CourseVm>

<div class="tab-pane fade show active" id="draft" role="tabpanel">
@if (Model?.Any() == true)
{
    <div class="course-grid">
    @foreach(var course in Model)
    {
                <!-- Sample Draft Course Card -->
                <div class="course-card" data-course-id="@course.CourseId">
                    <div class="course-image">
                        <i class="bi bi-pencil-square"></i>
                        <span class="status-badge badge-draft">Draft</span>
                    </div>
                    <div class="course-content">
                        <h5 class="course-title">@course.Title</h5>

                        <div class="progress-section">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <small class="text-muted">Course completion</small>
                                <small class="text-muted">@course.Progress%</small>
                            </div>
                            <div class="progress-bar-custom">
                                <div class="progress-fill bg-primary" style="width: @course.Progress%"></div>
                            </div>
                        </div>

                        <div class="course-actions">
                            <a asp-action="CreateStep2" asp-controller="Course" asp-route-id="@course.CourseId" class="btn btn-outline-primary btn-sm-custom flex-fill">
                                <i class="bi bi-pencil me-1"></i>Continue Editing
                            </a>
                            <div class="dropdown">
                                <button class="btn btn-outline-secondary btn-sm-custom" type="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-three-dots"></i>
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="#"><i class="bi bi-eye me-2"></i>Preview</a></li>
                                    <li><a class="dropdown-item" href="#"><i class="bi bi-send me-2"></i>Submit for Review</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a asp-action="Delete" asp-controller="Course" asp-route-id="@course.CourseId" class="dropdown-item text-danger" ><i class="bi bi-trash me-2"></i>Delete</a></li>
                                </ul>
                            </div>
                        </div>

                        <div class="course-meta">
                            Last updated: @course.UpdatedAt.ToString("MMM dd, yyyy")
                        </div>
                    </div>
                </div>

    }
    </div>
}

else
{
    <div class="empty-state">
        <i class="bi bi-clock-history empty-icon"></i>
        <h4 class="empty-title">No courses under review</h4>
        <p class="empty-description">Complete your draft courses and submit them for review to see them here.</p>
        <a href="#" class="btn btn-udemy">Continue Editing Drafts</a>
    </div>
}

</div>