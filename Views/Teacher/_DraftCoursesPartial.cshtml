@model List<LMS.ViewModels.Dashboard.CourseVm>

@if (Model?.Any() == true)
{
    <div class="row">
        @foreach (var course in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card course-card h-100" data-course-id="@course.CourseId">
                    <div class="position-relative">
                        <!-- Course Image -->
                        @if (!string.IsNullOrEmpty(course.ImagePath))
                        {
                            <img src="@course.ImagePath" class="card-img-top" style="height: 120px; object-fit: cover;" alt="@course.Title">
                        }
                        else
                        {
                            <div class="course-image">
                                <i class="bi bi-journal-bookmark"></i>
                            </div>
                        }

                        <!-- Status Badge -->
                        <span class="badge bg-secondary course-status-badge">DRAFT</span>
                    </div>

                    <div class="card-body d-flex flex-column">
                        <h6 class="card-title course-title mb-2 text-truncate">@course.Title</h6>

                        <!-- Progress Section -->
                        <div class="mb-3 mt-auto">
                            <div class="d-flex justify-content-between align-items-center mb-1">
                                <small class="text-muted">Completion</small>
                                <small class="text-muted">@course.Progress%</small>
                            </div>
                            <div class="progress-bar-custom">
                                <div class="progress-fill bg-primary" style="width: @course.Progress%"></div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex gap-2">
                            <a asp-action="CreateStep2" asp-controller="Course" asp-route-id="@course.CourseId"
                              class="btn btn-outline-primary btn-sm flex-fill">
                                <i class="bi bi-pencil me-1"></i>Edit
                            </a>

                            <a asp-action="Delete" asp-controller="Course" asp-route-id="@course.CourseId"
                               class="btn btn-outline-primary btn-sm flex-fill">
                                <i class="bi bi-pencil me-1"></i>Delete
                            </a>

                            <!-- no need -->
                            @* <a href="@Url.Action("Preview", "Course", new { id = course.CourseId })"
                               class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-eye"></i>
                            </a> *@
                            <!-- no need ( instead of delete ) -->
                            @* <div class="dropdown">
                                <button class="btn btn-outline-secondary btn-sm" type="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-three-dots"></i>
                                </button>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("Duplicate", "Course", new { id = course.CourseId })">
                                            <i class="bi bi-copy me-2"></i>Duplicate
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("Export", "Course", new { id = course.CourseId })">
                                            <i class="bi bi-download me-2"></i>Export
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item text-danger" href="@Url.Action("Delete", "Course", new { id = course.CourseId })"
                                           onclick="return confirm('Are you sure you want to delete this course?')">
                                            <i class="bi bi-trash me-2"></i>Delete
                                        </a>
                                    </li>
                                </ul>
                            </div> *@
                        </div>

                        <!-- Last Updated -->
                        <small class="text-muted mt-2">Updated @course.UpdatedAt.ToString("MMM dd, yyyy")</small>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center py-5">
        <div class="mb-4">
            <i class="bi bi-journal-plus" style="font-size: 4rem; color: #dee2e6;"></i>
        </div>
        <h4 class="text-muted mb-3">No draft courses yet</h4>
        <p class="text-muted mb-4">Create your first course to get started with teaching online.</p>
        <a asp-controller="Course" asp-action="CreateStep1" class="btn btn-primary btn-lg">
            <i class="bi bi-plus-circle me-2"></i>Create Your First Course
        </a>
    </div>
}