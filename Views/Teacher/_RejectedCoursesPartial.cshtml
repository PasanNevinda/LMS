 @model List<LMS.ViewModels.Dashboard.CourseVm>

@if (Model?.Any() == true)
{
    <div class="row">
        @foreach (var course in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card course-card h-100" data-course-id="@course.CourseId">
                    <div class="position-relative">
                        <!-- Course Image -->
                        @if (!string.IsNullOrEmpty(course.ImagePath))
                        {
                            <img src="@course.ImagePath" class="card-img-top" style="height: 120px; object-fit: cover;" alt="@course.Title">
                        }
                        else
                        {
                            <div class="course-image" style="background: linear-gradient(135deg, #dc3545 0%, #fd7e14 100%);">
                                <i class="bi bi-x-circle-fill"></i>
                            </div>
                        }

                        <!-- Status Badge -->
                        <span class="badge bg-danger course-status-badge">REJECTED</span>
                    </div>

                    <div class="card-body d-flex flex-column">
                        <h6 class="card-title course-title mb-2 text-truncate">@course.Title</h6>

                        <!-- Rejection Info -->
                        <div class="alert alert-danger py-2 px-3 mb-3" role="alert">
                            <small>
                                <i class="bi bi-exclamation-triangle me-1"></i>
                                Course needs improvements before publication
                            </small>
                        </div>

                        <!-- Progress Section -->
                        <div class="mb-3 mt-auto">
                            <div class="d-flex justify-content-between align-items-center mb-1">
                                <small class="text-muted">Completion</small>
                                <small class="text-muted">@course.Progress%</small>
                            </div>
                            <div class="progress-bar-custom">
                                <div class="progress-fill bg-danger" style="width: @course.Progress%"></div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex gap-2">
                            <a href="@Url.Action("ViewFeedback", "Course", new { id = course.CourseId })"
                               class="btn btn-outline-danger btn-sm flex-fill">
                                <i class="bi bi-chat-left-text me-1"></i>Feedback
                            </a>
                            <a href="@Url.Action("Edit", "Course", new { id = course.CourseId })"
                               class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <div class="dropdown">
                                <button class="btn btn-outline-secondary btn-sm" type="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-three-dots"></i>
                                </button>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("ReviewFeedback", "Course", new { id = course.CourseId })">
                                            <i class="bi bi-chat-square-text me-2"></i>View All Feedback
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("FixIssues", "Course", new { id = course.CourseId })">
                                            <i class="bi bi-tools me-2"></i>Fix Issues
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("Resubmit", "Course", new { id = course.CourseId })">
                                            <i class="bi bi-arrow-repeat me-2"></i>Resubmit for Review
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item text-danger" href="@Url.Action("Archive", "Course", new { id = course.CourseId })"
                                           onclick="return confirm('Are you sure you want to archive this course?')">
                                            <i class="bi bi-archive me-2"></i>Archive Course
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>

                        <!-- Rejection Date -->
                        <small class="text-muted mt-2">Rejected @course.UpdatedAt.ToString("MMM dd, yyyy")</small>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center py-5">
        <div class="mb-4">
            <i class="bi bi-shield-check" style="font-size: 4rem; color: #dee2e6;"></i>
        </div>
        <h4 class="text-muted mb-3">No rejected courses</h4>
        <p class="text-muted mb-4">All your courses have been approved or are awaiting review.</p>
        <div>
            <a asp-controller="Course" asp-action="Index" class="btn btn-primary me-2">
                <i class="bi bi-eye me-2"></i>View All Courses
            </a>
            <a asp-controller="Course" asp-action="CreateStep1" class="btn btn-outline-primary">
                <i class="bi bi-plus-circle me-2"></i>Create New Course
            </a>
        </div>
    </div>
}