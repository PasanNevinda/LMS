@using LMS.ViewModels.Student_ViewModles
@model CartVm

@{
    Layout = "_StudentLayout";
}

<!-- Cart View -->
<div id="cartView" style="display: block;">
    <div class="page-header">
        <div class="container-fluid px-4">
            <h1 class="page-title">Shopping Cart</h1>
            <p class="text-muted">
                <span id="cartItemCount">@((Model.Items.Count > 0) ? Model.Items.Count.ToString() : "No")</span> Course(s) in Cart
            </p>

        </div>
    </div>
    <div class="container-fluid px-4">
        <div class="row">
            <div class="col-lg-8">
                <div id="cartItems">

                    @if(Model.Items.Count > 0 )
                    {
                        foreach(var item in Model.Items)
                        {
                            <div class="cart-item">
                                <img src="~/@item.CourseImage" class="cart-item-image" alt="@item.CourseName">
                                <div class="cart-item-content">
                                    <h5 class="mb-1">@item.CourseName</h5>
                                    <p class="text-muted mb-2">By @item.TeacherName</p>
                                    <div class="d-flex align-items-center gap-3">
                                        <span><i class="bi bi-star-fill text-warning me-1"></i>@item.Rating</span>
                                        <span>
                                            <i class="bi bi-clock me-1"></i>
                                            @{
                                                var totalMinutes = item.CourseDurationInMinutes;
                                                var hours = totalMinutes / 60;          // integer division
                                                var minutes = totalMinutes % 60;
                                                var durationText = (hours > 0 ? hours + "h " : "") + minutes + "m";
                                            }
                                            @durationText
                                        </span>

                                    </div>
                                </div>
                                <div class="text-end">
                                    <div class="mb-2">
                                        <span class="h5">$@item.Price</span>
                                    </div>
                                    <form asp-action="RemoveCartItem" asp-controller="Student" asp-route-cartItemId="@item.CartItemId">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i> Remove
                                        </button>
                                    </form>
                                </div>
                            </div>
                        }

                    }
                    else
                    {
                        <div class="empty-state">
                            <div class="empty-icon"><i class="bi bi-cart3"></i></div>
                            <h3>Your cart is empty</h3>
                            <p class="text-muted mb-4">Add courses to get started!</p>
                            <form asp-controller="Student" asp-action="BrowseCourse" method="get">
                                <button type="submit" class="btn btn-primary-custom" style="width: auto;">
                                    Browse Courses
                                </button>
                            </form>

                        </div>
                    }


                </div>
            </div>
            <div class="col-lg-4">
                @if (Model.Items.Count > 0)
                {
                    <div class="cart-summary">
                        <h5 class="mb-3">Order Summary</h5>
                        <hr>
                        <div class="d-flex justify-content-between mb-3">
                            <strong>Total:</strong>
                            <strong id="total">$@Model.TotalAmount</strong>
                        </div>
                        <button class="btn-primary-custom" onclick="checkout()">
                            <i class="bi bi-credit-card me-2"></i>Checkout
                        </button>
                    </div>
                }
                    
            </div>
        </div>
    </div>
</div>