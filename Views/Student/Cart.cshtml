@{
    Layout = "_StudentLayout";
}

<!-- Cart View -->
<div id="cartView" style="display: block;">
    <div class="page-header">
        <div class="container-fluid px-4">
            <h1 class="page-title">Shopping Cart</h1>
            <p class="text-muted"><span id="cartItemCount">0</span> Course(s) in Cart</p>
        </div>
    </div>
    <div class="container-fluid px-4">
        <div class="row">
            <div class="col-lg-8">
                <div id="cartItems">


                    <div class="cart-item">
                        <img src="${course.image}" class="cart-item-image" alt="${course.title}">
                        <div class="cart-item-content">
                            <h5 class="mb-1">${course.title}</h5>
                            <p class="text-muted mb-2">By ${course.instructor}</p>
                            <div class="d-flex align-items-center gap-3">
                                <span><i class="bi bi-star-fill text-warning me-1"></i>${course.rating}</span>
                                <span><i class="bi bi-clock me-1"></i>${course.duration}</span>
                            </div>
                        </div>
                        <div class="text-end">
                            <div class="mb-2">
                                <span class="h5">${course.price}</span>
                                <div><small class="text-muted text-decoration-line-through">${course.originalPrice}</small></div>
                            </div>
                            <button class="btn btn-sm btn-outline-danger" onclick="removeFromCart('${courseId}')">
                                <i class="bi bi-trash"></i> Remove
                            </button>
                        </div>
                    </div>


                    <div class="empty-state">
                        <div class="empty-icon"><i class="bi bi-cart3"></i></div>
                        <h3>Your cart is empty</h3>
                        <p class="text-muted mb-4">Add courses to get started!</p>
                        <button class="btn btn-primary-custom" style="width: auto;" onclick="showView('browse')">
                            Browse Courses
                        </button>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="cart-summary">
                    <h5 class="mb-3">Order Summary</h5>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Subtotal:</span>
                        <span id="subtotal">$0.00</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Discount:</span>
                        <span class="text-success" id="discount">-$0.00</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between mb-3">
                        <strong>Total:</strong>
                        <strong id="total">$0.00</strong>
                    </div>
                    <button class="btn-primary-custom" onclick="checkout()">
                        <i class="bi bi-credit-card me-2"></i>Checkout
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>