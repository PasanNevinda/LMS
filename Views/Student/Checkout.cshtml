@using LMS.ViewModels.Student_ViewModles
@model CheckoutVm
@{
    ViewData["Title"] = "Checkout Payment";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - LMS</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: #f5f7fa;
            font-family: 'Segoe UI', sans-serif;
        }

        .payment-container {
            max-width: 500px;
            margin: 60px auto;
            padding: 40px;
            background: #fff;
            border-radius: 15px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        }

            .payment-container h2 {
                text-align: center;
                margin-bottom: 30px;
                color: #333;
            }

        .form-label {
            font-weight: 600;
        }

        .form-control:disabled {
            background-color: #e9ecef;
            opacity: 1;
        }

        .btn-pay {
            width: 100%;
            padding: 12px;
            font-size: 1.1rem;
            border-radius: 8px;
        }
    </style>
</head>
<body>

    <div class="payment-container">
        <h2>Checkout</h2>

        <!-- ModelState errors only -->
        @* <div asp-validation-summary="All" class="text-danger mb-4"></div> *@

        <form asp-action="ProcessCartPayment" method="post">
            <input type="hidden" asp-for="StudentId" />

            <div class="mb-3">
                <label class="form-label">Student Name</label>
                <input asp-for="StudentName" class="form-control" readonly />
            </div>

            <div class="mb-3">
                <label class="form-label">Total Amount</label>
                <input asp-for="TotalAmount" class="form-control" readonly />
            </div>

            <div class="mb-3">
                <label class="form-label">Card Number</label>
                <input asp-for="CardNumber" class="form-control" placeholder="1234 5678 9012 3456" />
                <span asp-validation-for="CardNumber" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Expiry Month</label>
                    <input asp-for="ExpiryMonth" class="form-control" placeholder="MM" />
                    <span asp-validation-for="ExpiryMonth" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Expiry Year</label>
                    <input asp-for="ExpiryYear" class="form-control" placeholder="YYYY" />
                    <span asp-validation-for="ExpiryYear" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">CVV</label>
                <input asp-for="Cvv" class="form-control" placeholder="123" />
                <span asp-validation-for="Cvv" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary btn-pay">
                Pay @Model.TotalAmount.ToString("C")
            </button>
        </form>
    </div>

    <!-- Client-side validation (instant red messages while typing) -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>