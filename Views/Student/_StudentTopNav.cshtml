@using LMS.Models.Entities
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> userManager

<div class="top-navbar">
    <div class="container-fluid px-4">
        <div class="d-flex justify-content-between align-items-center">
            <div class="search-bar"></div>
            <div class="d-flex align-items-center gap-3">
                <a onclick="showView('cart')" class="position-relative" style="color: var(--dark-color); cursor: pointer;">
                    <i class="bi bi-cart3" style="font-size: 24px;"></i>
                    <span class="cart-badge" id="cartBadge">0</span>
                </a>
                <div class="dropdown">
                    <button class="btn btn-light dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        <i class="bi bi-person-circle me-2"></i>Hello @userManager.GetUserName(User)!
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><i class="bi bi-person me-2"></i>My Profile</a></li>
                        
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <form method="post" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/Home/Index">
                                <button type="submit" class="dropdown-item">
                                    <i class="bi bi-box-arrow-right me-2"></i>Logout
                                </button>
                            </form>
                        </li>

                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>