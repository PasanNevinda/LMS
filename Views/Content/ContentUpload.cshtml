@model LMS.ViewModels.ContentVMs.ContentUploadVM  // Replace with your actual view model if using one (e.g., for binding)

@{
    ViewData["Title"] = "File Upload";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>File Upload</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2 class="mb-4">Upload Files</h2>
        <form  asp-controller="Content" asp-action="ContentUpload" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="files" class="form-label">Select Files</label>
                <input type="file" class="form-control" id="files" name="Files" multiple />
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="text-danger">
                        @Html.ValidationMessageFor(model => model.Files)
                    </div>
                }
            </div>
            <button type="submit" class="btn btn-primary">Upload</button>
        </form>
    </div>

    <!-- Bootstrap 5 JS (Optional, for interactive components) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>