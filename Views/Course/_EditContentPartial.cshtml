@using LMS.ViewModels.CourseDetailsVms
@model  ModuleContentItemVm






<!-- In <head> -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<!-- Before </body> -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>


<form id="saveEditform">
    <input type="hidden" asp-for="ContentItemId" />
   <div class="modal-body" id="edit-content-body">
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea class="form-control" id="Description" name="Description" rows="4"
                    placeholder="@Model.Description"></textarea>
        </div>
        <div class="mb-3">
                    <label for="Display Name" class="form-label">Display Name</label>
                    <textarea class="form-control" id="DisplayName" name="DisplayName" rows="4" placeholder="@Model.DisplayName"></textarea>
        </div>

       
    <button type="submit" class="btn btn-primary" id="edit-@Model.ContentItemId">Save changes</button>
    </form>







@section Scripts {
    <script src="~/js/Course.js"></script>
    <script src="~/js/tus.js"></script>
<script src="~/js/tusUpload.js"></script>
}
