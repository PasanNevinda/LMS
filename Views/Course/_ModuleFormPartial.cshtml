@model LMS.ViewModels.CourseDetailsVms.ModuleVm


<form asp-action="CreateorEditModule" asp-controller="Course" method="post" id="addModuleForm">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="CourseId" />
    <input type="hidden" asp-for="Id" />

    <div class="modal-body">
        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" placeholder="Enter module name" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Describe what students will learn in this module"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">
            @(Model.Id == 0 ? "Add Module" : "Save Changes")
        </button>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@section Styles {
    <link rel="stylesheet" href="/js/course-detail.js" />
}