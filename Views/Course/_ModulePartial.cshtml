@model LMS.ViewModels.CourseDetailsVms.ModuleVm

<!-- Module Card -->
<div class="module-card" id="module-@Model.Id" data-module-id="@Model.Id">
    <div class="module-header" onclick="toggleModule(@Model.Id)">
        <div class="module-title">
            <i class="fas fa-play-circle text-primary"></i>
            @Model.Name
            <span class="badge bg-light text-dark ms-2">
                @* @($"{Model.Items.Count} items • {Model.Items.Sum(i => i.DurationMinutes)} min") *@
            </span>
        </div>
        <div class="d-flex align-items-center">
            <div class="module-actions">
                <button class="btn-sm-icon btn-edit" onclick="event.stopPropagation(); openAddModuleModal(@Model.CourseId, @Model.Id);" title="Edit Module">
                    <i class="fas fa-edit"></i>
                </button>
                <button class="btn-sm-icon btn-delete" onclick="event.stopPropagation(); deleteModule(@Model.Id)" title="Delete Module">
                    <i class="fas fa-trash"></i>
                </button>
            </div>
            <button class="module-toggle" id="toggle-@Model.Id">
                <i class="fas fa-chevron-down"></i>
            </button>
        </div>
    </div>

    <div class="module-content" id="content-@Model.Id">
        <div class="module-description">
            @Model.Description
        </div>

        <ul class="module-items">
