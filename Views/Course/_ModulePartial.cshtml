@model LMS.ViewModels.CourseDetailsVms.ModuleVm


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<div class="module-card" id="module-@Model.Id" data-module-id="@Model.Id">
    <div class="module-header" onclick="toggleModule(@Model.Id)">
        <div class="module-title">
            <i class="fas fa-play-circle text-primary"></i>
            @Model.Name
            <span class="badge bg-light text-dark ms-2">
                @* @($"{Model.Items.Count} items • {Model.Items.Sum(i => i.DurationMinutes)} min") *@
            </span>
        </div>
        <div class="d-flex align-items-center">
            <div class="module-actions">
                <button class="btn-sm-icon btn-edit" onclick="event.stopPropagation(); openAddModuleModal(@Model.CourseId, @Model.Id);" title="Edit Module">
                    <i class="fas fa-edit"></i>
                </button>
                <button class="btn-sm-icon btn-delete" onclick="event.stopPropagation(); deleteModule(@Model.Id)" title="Delete Module">
                    <i class="fas fa-trash"></i>
                </button>
            </div>
            <button class="module-toggle" id="toggle-@Model.Id">
                <i class="fas fa-chevron-down"></i>
            </button>
        </div>
    </div>
    </a>
    <div class="module-content" id="content-@Model.Id">
        
        <div class="module-description">
            @Model.Description
        </div>
       
        <ul class="module-items" id="moduleitems-@Model.Id">
            
            @foreach (var item in Model.Items)
            {
                
                  
                 <li class="module-item" id = "@item.ContentItemId" > 
                    
                     <div class="item-info" onclick="handleClick('@item.DisplayName', '@item.Type', '@Url.Content($"~/{ @item.FilePath.Replace("\\", "/")}")')" >
                        <div class="item-icon @(item.Type)">
                            @if (item.Type == "Video")
                            {
                                <i class="fas fa-play"></i>
                            }
                            else if (item.Type == "Document")
                            {
                                <i class="fas fa-file-pdf"></i>
                            }
                            else
                            {
                                <i class="fas fa-file"></i>
                            }
                        </div>
                       
                        <div class="item-details">
                            <div class="item-title" id="DisplayName-@item.ContentItemId">@item.DisplayName</div>
                          @* <div class="item-type">@item.Type • @item.DisplayDuration</div>*@
                        </div>
                    </div>
                    <div class="edit-controls">
                        <button class="btn-sm-icon btn-edit" onclick="editContentItem('@item.ContentItemId')" title="Edit Item">
                            <i class="fas fa-edit"></i>
                        </button>
                        <button class="btn-sm-icon btn-delete" onclick="deleteContentItem('@item.ContentItemId')" title="Delete Item">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                </li> 
                
            }
        </ul>

        
         <div class="p-3 text-center border-top" style="display: none;">
            <button class="btn btn-outline-success" onclick="showAddItemModal(@Model.CourseId,@Model.Id)">
                <i class="fas fa-plus me-2"></i>
                Add Content Item
            </button>
        </div> 
    </div>
</div>
  <div class="modal fade" id="content-edit-model" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="module-form-title">Edit Content</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="edit-content-body">
                <!-- server HTML inserted here -->
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/js/Course.js"></script>
    <script src="~/js/tus.js"></script>
<script src="~/js/tusUpload.js"></script>
}

