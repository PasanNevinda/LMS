@model LMS.ViewModels.CourseDetailsVms.CourseDetailsVm
@{
    ViewData["Title"] = "Course";
}

<div class="container mt-4">
    <div class="card shadow-sm mb-3">
        <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0">@Model.Name</h3>
            @if (Model.IsOwner)
            {
                <button id="btnToggleEdit" class="btn btn-warning">Edit Course</button>
            }
        </div>
        <div class="card-body">
            <div><strong>Language:</strong> @Model.Language</div>
            <div><strong>Price:</strong> $@Model.Price</div>
            <div class="mt-2">@Model.Description</div>
        </div>
    </div>

    <div class="d-flex justify-content-between align-items-center">
        <h4>Modules</h4>
        @if (Model.IsOwner)
        {
           // <button asp-controller="Module" asp-action="Add" asp-route-CourseId="@Model.Id" class="btn btn-success" @*data-bs-toggle="modal" data-bs-target="#addModuleModal"*@>+ Add Module</button>
           // showInPopUp_Module - first parameter= url , second=Title
            <button onclick="showInPopUp_Module('@Url.Action("Add", "Module", new { CourseId = Model.Id }, Context.Request.Scheme)', 'Add Module')"
                    class="btn btn-success text-white">
                + Add Module
            </button>

        }
    </div>

    <div class="accordion mt-3" id="modulesAccordion">
        @foreach (var m in Model.Modules)
        {
            @await Html.PartialAsync("Partials/_ModulePartial", m)
        }
    </div>
</div>

<div class="modal fade" id="module-form-model" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                body goes here
            </div>

        </div>
    </div>
</div>



