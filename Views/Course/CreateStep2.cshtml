@using LMS.ViewModels
@model Step2ViewModel

@{
    ViewData["Title"] = "Create Course - Step 2";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Create a New Course - Step 2</h4>
                </div>
                <div class="card-body">
                    <form asp-action="CreateStep2" method="post">
                        <div class="mb-3">
                            <label asp-for="Language" class="form-label">Language</label>
                            <select asp-for="Language" class="form-select" required>
                                <option value="">-- Select a Language --</option>
                                <option value="English">English</option>
                                <option value="Sinhala">Sinhala</option>
                                <option value="Tamil">Tamil</option>
                            </select>
                            <span asp-validation-for="Language" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Course Description</label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter course description"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="CreateStep1" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back
                            </a>
                            <button type="submit" class="btn btn-primary">
                                Next <i class="bi bi-arrow-right"></i>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
